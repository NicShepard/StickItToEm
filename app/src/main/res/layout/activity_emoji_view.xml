<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmojiView">

    <EditText
        android:id="@+id/recipientInputTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Recipient"
        app:layout_constraintBottom_toTopOf="@+id/heartButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/heartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart"
        app:layout_constraintBottom_toTopOf="@+id/smileyButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipientInputTV" />

    <Button
        android:id="@+id/smileyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smiley"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heartButton" />
</androidx.constraintlayout.widget.ConstraintLayout>